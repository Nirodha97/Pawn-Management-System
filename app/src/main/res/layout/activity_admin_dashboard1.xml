<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_dashboard1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/estimater"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="#2196F3"
            android:foregroundGravity="center"
            android:gravity="center"

            android:text="JEWELERY VALUE ESTIMATER"
            android:textAlignment="center"
            android:textColor="#F8F8F8"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/transaction_details"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="10sp"
            android:background="#2196F3"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Transaction Deails"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_transaction"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="10sp"
            android:background="#2196F3"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Add a transaction"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/users_details"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="10sp"
            android:background="#2196F3"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Users Details"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calculater1"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="10sp"
            android:background="#2196F3"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Calculator"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>